<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">estate_offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
    <record id="estate_property_offers_view_tree" model="ir.ui.view">
        <field name="name">estate_property_offer_tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Tmp" editable="bottom" decoration-danger="status == 'refused'"
                  decoration-success="status == 'accepted'">
                <field name="id"/>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="property_id"/>
                <button name="action_confirm" string="Confirm" type="object" icon="fa-check" invisible="status"/>
                <button name="action_cancel" string="Refuse" type="object" icon="fa-times" invisible="status"/>
                <field name="status" invisible="True"/>
                <field name="property_type_id"/>
            </tree>
        </field>
    </record>
</odoo>