<?xml version="1.0"?>
<odoo>

    <record id="estate_property_offers_view_tree" model="ir.ui.view">
        <field name="name">estate_property_offer_tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Tmp" editable="bottom" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                <field name="id" />
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="property_id" invisible="1"/>
                <button name="action_confirm" string="Confirm" type="object" icon="fa-check" invisible="status"/>
                <button name="action_cancel" string="Refuse" type="object" icon="fa-times" invisible="status"/>
                <field name="status" invisible="True"/>
            </tree>
        </field>
    </record>
</odoo>