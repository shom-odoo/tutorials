<?xml version="1.0"?>
<odoo>

    <record id="estate_property_offers_view_tree" model="ir.ui.view">
        <field name="name">estate_property_offer_tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Tmp">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_confirm" string="Confirm" type="object" icon="fa-check"/>
                <button name="action_cancel" string="Refuse" type="object" icon="fa-times"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
</odoo>